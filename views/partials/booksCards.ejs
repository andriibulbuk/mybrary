<div class="cards-container cards-container--books">
  <% books.forEach(book => { %>
    <section class="card">
      <h3 class="card__title"><%= book.title %></h3>
      <img 
        src="<%= book.coverImagePath %>"
        alt="Alt"
        height="200" 
        width="150"
        class="card__image"
      >
      <div class="card__info">
        <% if (book.author.name) { %>
          <div>
            <div>Author:</div>
            <h4><%= book.author.name %></h4>
          </div>
        <% } %>
        <div>Publish: <%= book.publishDateToShow %></div>
        <div class="card__last-info-field">Page count: <%= book.pageCount %></div>
        <div class="buttons-wrapper">
          <a href="/books/<%= book.id %>" class="button">View</a>
          <a href="/books/<%= book.id %>/edit" class="button">Edit</a>
        </div>
        <%- include('./deleteForm', { url: `/books/${book.id}` }) %>
      </div>
    </section>
  <% }) %>
</div>